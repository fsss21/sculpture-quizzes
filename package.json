{
  "name": "sculpture-quizzes",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:server:win": "pkg server/index.js --targets node18-win-x64 --output build/launch.exe",
    "build:server:mac": "pkg server/index.js --targets node18-macos-x64 --output build/server",
    "build:win": "npm run build && npm run build:server:win",
    "build:mac": "npm run build && npm run build:server:mac",
    "preview": "vite preview"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "react": "^18.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "react-dom": "^18.3.1",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "vite": "^5.4.2",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "build/**/*"
    ],
    "outputPath": "build"
  }
}
