{
  "name": "sculpture-quizzes",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "server": "node server.cjs",
    "start": "node server.cjs",
    "build:server": "pkg server.cjs --out-path dist --targets node18-win-x64,node18-macos-x64 --assets dist",
    "build:server:win": "pkg server.cjs --out-path dist --targets node18-win-x64 --assets dist",
    "build:server:mac": "pkg server.cjs --out-path dist --targets node18-macos-x64 --assets dist",
    "build:all": "npm run build && npm run build:server",
    "build:all:win": "npm run build && npm run build:server:win",
    "build:all:mac": "npm run build && npm run build:server:mac",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.3.1",
    "express": "^4.18.2",
    "react-dom": "^18.3.1",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "vite": "^5.4.2",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "server.cjs"
    ],
    "assets": [
      "dist/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist"
  }
}
